                        </control>
                        <control name="label" text="    "/>
                        <control name="button" id="dumpPhysicsVehicleButton"
                                 width="80px">
                            <interact onRelease="perform(dump vehicle)"/>
                        </control>
                    </panel>
                </panel>
            </control>

